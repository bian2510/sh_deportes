<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>
<div class="container col-lg-8 col-md-6 col-xs-12">
  <p>
    <h1><%= @post.title.capitalize %></h1>
  </p>
  <%= image_tag(url_for(@post.cover), class: "container col-lg-12 col-md-12 col-xs-12") %>
  <p>
    <h5><%= simple_format(@post.body.capitalize, class: 'h5') %></h5>
  </p>
  <div>
    <br>
    <h5>Comentarios:</h5>

    <%= render 'comments/form' %>

    <% @post.comments.reverse.each do |comment|%>
      <ul class="list-group">
        <li class="list-group-item" aria-disabled="true">
          <span class="font-weight-bold"><%= "#{comment.name.capitalize} #{comment.last_name.capitalize}"%></span>
          <span class="text-muted"><%= "#{comment.created_at.strftime('%Y-%m-%d')}"%></span>
        <p>
          <%= simple_format(comment.body.capitalize)%>
        </p>
        </li>
      </ul>
      </p>
    <% end %>
  </div>
  <% if user_signed_in?%>
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
    <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</div>